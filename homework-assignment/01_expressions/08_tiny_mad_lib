# Program: tiny_mad_libs


import itertools

print("ğŸ­ Welcome to the Ultimate Mad Libs Game! Get ready to create hilarious and wacky stories! âœ¨\n")

# List of sentence starters (rotating order)
SENTENCE_STARTERS = itertools.cycle([
    "Once upon a time, I discovered how to create my ",
    "In a magical world, I built a ",
    "Using Python, I invented a ",
    "I love coding! Today, I designed a ",
    "With a bit of creativity, I created a ",
    "In an alternate universe, my "
])

def mad_lib():
    """Generates a Mad Lib sentence with a rotating sentence starter."""
    while True:
        sentence_start = next(SENTENCE_STARTERS)

        adjective: str = input("ğŸ¨ Please enter an adjective and press Enter: ").strip().lower()
        noun: str = input("ğŸ“¦ Please enter a noun and press Enter: ").strip().lower()
        verb: str = input("ğŸƒ Please enter a verb and press Enter: ").strip().lower()

        mad_lib_sentence = sentence_start + adjective + " " + noun + " that can " + verb + "!"

        print("\nâœ¨ Hereâ€™s your Mad Libs sentence! âœ¨")
        print(f"ğŸ“ {mad_lib_sentence.capitalize()}\n")

        restart = input("ğŸ”„ Would you like to create another Mad Lib? (yes/y or no/n): ").strip().lower()
        if restart not in ["yes", "y"]:
            print("\nğŸ‘‹ Thanks for playing Mad Libs! Have a great day! ğŸ˜Š")
            break  # Exit the loop

if __name__ == "__main__":
    mad_lib()
