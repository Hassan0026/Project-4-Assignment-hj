import math

def calculate_hypotenuse():
    """
    This function prompts the user for the two perpendicular side lengths of a
    right triangle and calculates the hypotenuse using the Pythagorean theorem.
    """
    print("\nğŸ“ Pythagorean Theorem Calculator ğŸ“")

    while True:
        try:
            # Get the two side lengths from the user
            ab = float(input("ğŸ”¹ Enter the length of side AB: "))
            ac = float(input("ğŸ”¹ Enter the length of side AC: "))

            # Validate input: length should be positive
            if ab <= 0 or ac <= 0:
                print("âŒ Error: Side lengths must be positive numbers. Try again.")
                continue

            break  # Exit loop if valid input

        except ValueError:
            print("âŒ Error: Please enter a valid number.")

    # Compute the hypotenuse (BC) using the Pythagorean theorem
    bc = math.sqrt(ab**2 + ac**2)

    # Display result with 2 decimal places
    print(f"\nâœ… The length of BC (the hypotenuse) is: {bc:.2f} units.\n")

def main():
    """Main function to run the program."""
    calculate_hypotenuse()

    # Ask the user if they want another calculation
    while True:
        restart = input("ğŸ”„ Would you like to calculate another hypotenuse? (yes/no): ").strip().lower()
        if restart in ["yes", "y"]:
            calculate_hypotenuse()
        elif restart in ["no", "n"]:
            print("\nâœ… Thank you for using the Pythagorean Theorem Calculator! ğŸ¯")
            break
        else:
            print("âš ï¸ Please enter 'yes' or 'no'.")

# Run the program
if __name__ == "__main__":
    main()
