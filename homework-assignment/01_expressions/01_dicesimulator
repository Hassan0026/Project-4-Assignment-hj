import random
import time

def roll_dice(num_sides: int = 6):
    """
    Simulates rolling two dice and prints their total.
    :param num_sides: Number of sides on each die (default is 6).
    """
    die1: int = random.randint(1, num_sides)
    die2: int = random.randint(1, num_sides)
    total: int = die1 + die2
    print(f"\nðŸŽ² Rolling the dice... ðŸŽ²")
    time.sleep(1)  # Adding a delay for effect
    print(f"ðŸŽ¯ Die 1: {die1} | ðŸŽ¯ Die 2: {die2}")
    print(f"ðŸŽ‰ Total of two dice: {total}")

def main():
    """
    Main function to simulate rolling dice three times.
    """
    print("\nðŸŽ© Welcome to the Dice Simulator! ðŸŽ²")

    while True:
        # Asking user if they want a custom dice size
        try:
            num_sides = int(input("\nEnter number of sides for the dice (Press Enter for default 6): ") or 6)
            if num_sides < 2:
                print("âš ï¸ Dice must have at least 2 sides. Setting default (6).")
                num_sides = 6
        except ValueError:
            print("âŒ Invalid input! Setting default (6).")
            num_sides = 6

        print("\nðŸŽ¯ Rolling two dice, three times...\n")

        for _ in range(3):
            roll_dice(num_sides)

        # Ask if the user wants to roll again
        play_again = input("\nðŸ”„ Would you like to roll the dice again? (yes/no): ").strip().lower()
        if play_again not in ["yes", "y"]:
            print("\nâœ… Thanks for playing! Have a great day! ðŸ˜Š")
            break

# Run the program
if __name__ == "__main__":
    main()
