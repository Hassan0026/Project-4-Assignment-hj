def check_height(height: float) -> str:
    """Function to check if the user is tall enough to ride."""
    MINIMUM_HEIGHT: int = 50  # Minimum height for riding in arbitrary units

    # Compare height with minimum height requirement
    if height >= MINIMUM_HEIGHT:
        return "âœ… You're tall enough to ride!"
    else:
        return "âŒ You're not tall enough to ride, but maybe next year!"


def main():
    """Main function to handle user input and print results"""
    print("ğŸ¢ Welcome to the Amusement Park Ride Eligibility Checker! ğŸ¢")

    while True:
        try:
            # Ask for the user's height
            height_input = input("\nğŸ”¹ How tall is the person? (Enter height in cm or press Enter to quit): ")

            # If user presses enter without entering a height, exit the loop
            if height_input == "":
                print("ğŸ‘‹ Thank you for using the ride eligibility checker! Have a great day!")
                break

            # Convert the height to float
            height = float(height_input)

            # Check if the user is tall enough
            result = check_height(height)
            print(result)

            # Ask if they want to check another person
            while True:
                another_check = input("\nğŸ”„ Would you like to check another person's height? (yes or no): ").strip().lower()
                if another_check in ["yes", "y"]:
                    break  # Restart the loop for a new person
                elif another_check in ["no", "n"]:
                    print("ğŸ‘‹ Thank you for using the ride eligibility checker! Have a great day!")
                    return  # Exit the program
                else:
                    print("âŒ Invalid input! Please enter 'yes/y' or 'no/n'.")

        except ValueError:
            print("âŒ Invalid input! Please enter a valid number for height.")


if __name__ == '__main__':
    main()
