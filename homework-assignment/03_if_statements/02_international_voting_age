# Constants for voting ages in different countries
PETURKSBOUIPO_AGE: int = 16
STANLAU_AGE: int = 25
MAYENGUA_AGE: int = 48

def check_voting_eligibility(age: int):
    """
    Checks and prints whether the user is eligible to vote in three fictional countries.
    """
    print("\nğŸ” Checking Voting Eligibility...\n")

    # Checking voting eligibility in each country
    countries = {
        "Peturksbouipo": PETURKSBOUIPO_AGE,
        "Stanlau": STANLAU_AGE,
        "Mayengua": MAYENGUA_AGE
    }

    for country, voting_age in countries.items():
        if age >= voting_age:
            print(f"âœ… You can vote in {country} where the voting age is {voting_age}.")
        else:
            print(f"âŒ You cannot vote in {country} where the voting age is {voting_age}.")

def main():
    """ Main function to handle user input and call eligibility check """
    print("ğŸ—³ï¸ Welcome to the Voting Eligibility Checker! ğŸ—³ï¸\n")

    while True:
        # Get user input and validate it
        while True:
            try:
                user_age = int(input("ğŸ”¹ How old are you? "))
                if user_age < 0:
                    print("ğŸš¨ Age cannot be negative. Please enter a valid age.")
                else:
                    break  # Exit loop if input is valid
            except ValueError:
                print("âŒ Invalid input! Please enter a numeric value.")

        # Call function to check eligibility
        check_voting_eligibility(user_age)

        # Ask if user wants to check another age
        while True:
            restart = input("\nğŸ”„ Would you like to check another person's voting eligibility? (yes or no): ").strip().lower()
            if restart in ["yes", "y"]:
                print("\nğŸ” Restarting the program...\n")
                break  # Restart the loop
            elif restart in ["no", "n"]:
                print("\nğŸ‰ Thank you for using the Voting Eligibility Checker! Have a great day! ğŸ˜Š")
                return  # Exit the program
            else:
                print("âš ï¸ Invalid choice! Please enter 'yes' or 'no'.")

if __name__ == "__main__":
    main()