import time  # â³ Importing time module to add a delay for effect

def countdown():
    """ğŸš€ Prints a countdown from 10 to 1, then prints 'Liftoff!'."""
    print("ğŸ›¸ Initiating spaceship countdown...")

    for i in range(10, 0, -1):  # ğŸ”„ Loop from 10 down to 1
        print(i, end=" ", flush=True)  # âœ… Print countdown on same line
        time.sleep(1)  # â³ Pause for 1 second (to simulate real countdown)

    print("ğŸš€ Liftoff!")  # âœ… Final liftoff message

# ğŸš€ Main function
def main():
    countdown()

# ğŸ”¥ Run the program
if __name__ == "__main__":
    main()
