# ğŸ“Œ Number of even numbers to generate
NUM_EVEN_NUMBERS = 20

def print_even_numbers():
    """Prints the first 20 even numbers."""
    print("ğŸ”¢ First", NUM_EVEN_NUMBERS, "Even Numbers ğŸ”¢\n")

    even_numbers = [str(2 * i) for i in range(NUM_EVEN_NUMBERS)]  # Generate and convert to string
    print(" ".join(even_numbers))  # Print in one line

    print("\nâœ… Successfully printed the first", NUM_EVEN_NUMBERS, "even numbers.")

# ğŸš€ Main Function
def main():
    print_even_numbers()

# ğŸ”¥ Run the program
if __name__ == "__main__":
