import random

def guess_my_number():
    """ A number guessing game where the user tries to guess a randomly generated number. """

    secret_number = random.randint(0, 99)  # Generate a random number between 0 and 99
    print("\nğŸ¯ Welcome to 'Guess My Number' Game! ğŸ¯")
    print("I am thinking of a number between 0 and 99...\n")

    while True:
        try:
            guess = int(input("ğŸ”¢ Enter your guess: "))  # User input

            if guess < 0 or guess > 99:
                print("âš ï¸ Please enter a number between 0 and 99!")
            elif guess < secret_number:
                print("ğŸ“‰ Your guess is too low. Try again!")
            elif guess > secret_number:
                print("ğŸ“ˆ Your guess is too high. Try again!")
            else:
                print(f"\nğŸ‰ Congrats! The number was: {secret_number} ğŸ‰")
                break  # Exit the loop when the correct number is guessed
        except ValueError:
            print("âŒ Invalid input! Please enter a valid number.")

if __name__ == "__main__":
    guess_my_number()