import time

def double_until_100():
    """ğŸ§® Repeatedly doubles a user-provided number until it reaches or exceeds 100, with a delay."""

    curr_value = float(input("ğŸ”¢ Enter a number: "))  # âœ… Get input from the user

    print("\nğŸ“ˆ Doubling process (1 second delay per step):")

    while curr_value < 100:  # âœ… Loop until curr_value is 100 or more
        curr_value *= 2  # ğŸ”„ Double the current value
        print(int(curr_value), end=" ", flush=True)  # âœ… Print numbers on the same line
        time.sleep(1)  # â³ Add a 1-second delay between each doubling step

    print("\nğŸ¯ Stopping as the number has reached or exceeded 100!")

# ğŸ”¥ Main function
def main():
    double_until_100()

# ğŸ Run the program
if __name__ == "__main__":
    main()
