# ðŸ“Œ Maximum value for Fibonacci sequence
MAX_VALUE = 10000

def generate_fibonacci():
    """Generates and prints Fibonacci numbers up to MAX_VALUE."""
    fib1, fib2 = 0, 1  # First two Fibonacci numbers

    print("ðŸ“ˆ Fibonacci Sequence up to", MAX_VALUE, "ðŸ“ˆ\n")

    while fib1 <= MAX_VALUE:
        print(fib1, end=" ")  # Print the number in a single line
        fib1, fib2 = fib2, fib1 + fib2  # Update Fibonacci numbers

    print("\n\nâœ… Fibonacci sequence generation complete!")  # Completion message

# ðŸš€ Main Function
def main():
    generate_fibonacci()

# ðŸ”¥ Run the program
if __name__ == "__main__":
    main()
